{
  "name": "VitruvianPhoenix",
  "displayName": "Vitruvian Phoenix",
  "expo": {
    "name": "Vitruvian Phoenix",
    "slug": "vitruvian-phoenix",
    "version": "0.3.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "scheme": "vitruvianphoenix",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vitruvianphoenix.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Vitruvian Phoenix needs Bluetooth to connect to your Vitruvian workout machine and control workouts in real-time.",
        "NSBluetoothPeripheralUsageDescription": "Vitruvian Phoenix uses Bluetooth to discover and communicate with your Vitruvian workout equipment.",
        "NSLocationWhenInUseUsageDescription": "Location permission is required for Bluetooth device scanning on iOS.",
        "UIBackgroundModes": [
          "bluetooth-central",
          "bluetooth-peripheral"
        ],
        "UIRequiredDeviceCapabilities": [
          "armv7",
          "bluetooth-le"
        ],
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "vitruvianphoenix"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "package": "com.vitruvianphoenix.app",
      "versionCode": 1,
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "vitruvianphoenix"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "13.0"
          },
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "minSdkVersion": 26
          }
        }
      ],
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": [
            "peripheral",
            "central"
          ],
          "bluetoothAlwaysPermission": "Vitruvian Phoenix needs Bluetooth to connect to your Vitruvian workout machine and control workouts in real-time."
        }
      ],
      "expo-font",
      [
        "expo-sqlite",
        {
          "enableFTS": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "YOUR_PROJECT_ID_HERE"
      }
    }
  }
}
